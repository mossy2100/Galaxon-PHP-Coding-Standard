<?xml version="1.0"?>
<ruleset name="GalaxonPHPCodingStandard">
    <description>Galaxon PHP Coding Standard</description>

    <!-- Inherit from PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Custom sniffs -->
    <rule ref="GalaxonPHPCodingStandard.NamingConventions.ValidVariableName"/>
    <rule ref="GalaxonPHPCodingStandard.Classes.ClassInstantiationNoBrackets"/>

    <!-- Allow multiple classes in test files for test fixtures -->
    <rule ref="PSR1.Classes.ClassDeclaration.MultipleClasses">
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>

</ruleset>
