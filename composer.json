{
    "name": "galaxon/coding-standard",
    "description": "PHP_CodeSniffer coding standard extending PSR-12 with lowerCamelCase naming and modern PHP 8.4+ rules.",
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "keywords": [
        "php",
        "phpcs",
        "codesniffer",
        "coding-standard",
        "psr-12",
        "linting",
        "code-style"
    ],
    "authors": [
        {
            "name": "Shaun Moss",
            "email": "shaun@astromultimedia.com"
        }
    ],
    "homepage": "https://github.com/mossy2100/Galaxon-PHP-Coding-Standard",
    "support": {
        "issues": "https://github.com/mossy2100/Galaxon-PHP-Coding-Standard/issues",
        "source": "https://github.com/mossy2100/Galaxon-PHP-Coding-Standard"
    },
    "require": {
        "php": "^8.4",
        "squizlabs/php_codesniffer": "^4.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "slevomat/coding-standard": "^8.25"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf -vp",
        "check": "vendor/bin/phpcs -s",
        "report": "vendor/bin/phpcs -q --report=summary",
        "analyze": "vendor/bin/phpstan analyze -l 9",
        "quality": [
            "@fix",
            "@check",
            "@analyze"
        ]
    },
    "extra": {
        "phpcodesniffer-search-depth": 3
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
